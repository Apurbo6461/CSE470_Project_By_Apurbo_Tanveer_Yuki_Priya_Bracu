  <h2 style="text-align:center;font-family:sans-serif;margin-top:20px">Lifelink Patient Management Demo</h2>
  <p style="text-align:center;color:#555;margin-bottom:20px">This is a simplified runnable demo version.</p>

  <div style="max-width:480px;margin:auto;background:#fff;padding:20px;border-radius:10px;box-shadow:0 2px 6px rgba(0,0,0,0.15)">
    <h3 style="display:flex;align-items:center;gap:8px">
        <img src="https://cdn-icons-png.flaticon.com/512/2967/2967350.png" style="width:22px">
        Patient Profile
    </h3>
    <form id="patientForm">
      <label>Patient Name <input type="text" id="name" required></label>
      <label>Sex <select id="sex"><option>Male</option><option>Female</option><option>Other</option></select></label>
      <label>Age <input type="number" id="age"></label>
      <label>Phone <input type="text" id="phone"></label>
      <label>Email <input type="email" id="email"></label>
      <label>Address <textarea id="address"></textarea></label>
      
      <!-- Attach Previous Medical History -->
      <label>Attach Previous Medical History (Images / PDFs)</label>
      <input type="file" id="historyFiles" multiple>
      <div id="preview" class="preview-grid"></div>

      <button type="submit">Save Patient</button>
    </form>

    <p id="msg" style="color:green;margin-top:10px"></p>
    <p id="patientIdDisplay" style="color:#0b74de;font-weight:bold;margin-top:5px"></p>

    <!-- Patient Details Display -->
    <div id="patientDetails" class="patient-details" style="display:none;"></div>
  </div>

  <script>
    function generatePatientId(){
      return 'PAT-' + Date.now().toString(36).toUpperCase();
    }

    document.getElementById('patientForm').addEventListener('submit', e => {
      e.preventDefault();
      const patientId = generatePatientId();
      document.getElementById('msg').innerText = 'Patient Saved Successfully!';
      document.getElementById('patientIdDisplay').innerText = 'Patient ID: ' + patientId;

      // Collect attached files
      const filesInput = document.getElementById('historyFiles');
      const fileNames = [...filesInput.files].map(f => f.name).join(', ') || 'No files attached';

      // Show all details
      const detailsDiv = document.getElementById('patientDetails');
      detailsDiv.style.display = 'block';
      detailsDiv.innerHTML = `
        <h4>Patient Details</h4>
        <p><strong>ID:</strong> ${patientId}</p>
        <p><strong>Name:</strong> ${document.getElementById('name').value}</p>
        <p><strong>Sex:</strong> ${document.getElementById('sex').value}</p>
        <p><strong>Age:</strong> ${document.getElementById('age').value}</p>
        <p><strong>Phone:</strong> ${document.getElementById('phone').value}</p>
        <p><strong>Email:</strong> ${document.getElementById('email').value}</p>
        <p><strong>Address:</strong> ${document.getElementById('address').value}</p>
        <p><strong>Medical History Files:</strong> ${fileNames}</p>
      `;
    });

    // File preview
    document.getElementById('historyFiles').addEventListener('change', function() {
      const preview = document.getElementById('preview');
      preview.innerHTML = '';
      [...this.files].forEach(file => {
        if (file.type.startsWith('image/')) {
          const img = document.createElement('img');
          img.src = URL.createObjectURL(file);
          preview.appendChild(img);
        } else {
          const div = document.createElement('div');
          div.textContent = file.name;
          div.style = "padding:5px;font-size:12px;background:#eef2f7;border-radius:6px";
          preview.appendChild(div);
        }
      });
    });
  </script>
